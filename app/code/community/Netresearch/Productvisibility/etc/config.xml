<config>
    <modules>
        <Netresearch_Productvisibility>
            <version>0.1.0</version>
        </Netresearch_Productvisibility>
    </modules>
    <global>
        <helpers>
            <productvisibility>
                <class>Netresearch_Productvisibility_Helper</class>
            </productvisibility>
        </helpers>
        <models>
            <productvisibility>
                <class>Netresearch_Productvisibility_Model</class>
            </productvisibility>
        </models>
    </global>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <productvisibility>
                        <type>singleton</type>
                        <class>productvisibility/observer</class>
                        <method>injectProductEditTab</method>
                    </productvisibility>
                </observers>
            </core_block_abstract_prepare_layout_after>
        </events>
    </adminhtml>
</config>